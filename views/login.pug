doctype html
html
  head
    title Rouge - Login
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    
    
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    

    div(class="container" style="display:flex; flex-direction:column; align-items: center")
      
        div(class="modal")
           div#loader(style="display: none;")
        div(class="row")
          div(class="col-md-02 col-md-offset-0")              
            div(style="display:flex; margin-top:50px;margin-bottom:50px; overflow:hidden; flex-direction: column;justify-content:center;") 
            
              a(style="text-align:center" href="https://unb.br/" target="_blank")
                 img(src="/images/logo.svg" style="width:200px; border-radius:5px")
              h2(style="text-align:center") Interface 
              h2(style="text-align:center") ROUGE 2.0           
          div(class="col-md-08 col-md-offset-0")  
            if message
              div(style="display:block; text-align:center" class="alert alert-danger" role="alert")=message
            else
              div(style="display:none" class="alert alert-danger" role="alert")=message         
            form(name="frm01" method="POST" action="")           
              div(class="container-fluid" style="background-color: #ececf7; ")
                  div(class="group")
                    input#email(type="text", required name="email")
                    label Email: 
                    span(class="highlight")
                    span(class="bar")                 
                  div(class="group")
                    input#senha(type="password", required name="senha")
                    label Senha: 
                    span(class="highlight")
                    span(class="bar")
                  div(class="group")
                    input(class="input_btn" id="btn01" name="btn" type="submit" value="Entrar")  
                    a(class="input_btn" href="/registrar" id="reg" type="button") Registrar

    include footer
    script(src="/javascripts/main.js")
    script.
      
        

      op("form[name='frm01']").addEventListener('submit', () =>{
          return 1===1 ? a() : null;           
          }
          );
      

     
      
    


script(src="/javascripts/jquery-3.5.1.min.js")         
script(src="/javascripts/bootstrap.min.js")
 