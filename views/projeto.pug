extends layout

block menu
    include menu

block content
    div(style="display:flex; flex-direction:column; margin:10px")
            div(style="display:flex; margin-top:15px; flex-direction: column;")
                div(style="display:flex;flex-direction:row")
                    h4(class="labelP") Código do Projeto:  
                    h4 #{projeto._id}
                div(style="display:flex;flex-direction:row")
                    h4(class="labelP") Nome:
                    h4 #{projeto.nome}
                -function formataData(value){ const mes = [];mes[0] = "01";mes[1] = "01";  mes[2] = "02";mes[3] = "03"; mes[4] = "04";mes[5] = "05";mes[6] = "06";mes[7] = "07";mes[8] = "08";mes[9] = "09";mes[10] = "10";mes[11] = "11";mes[12] = "12";return (value.dataCriacao.getDate()<10 ? "0" +value.dataCriacao.getDate() : value.dataCriacao.getDate())  + "/" + mes[value.dataCriacao.getMonth()] + "/" + value.dataCriacao.getFullYear()}                                             
                div(style="display:flex;flex-direction:row")
                    h4(class="labelP") Data de criação: 
                    h4 #{formataData(projeto)}
                a(href='/api/result/'+ projeto._id download) Baixar resultado

            table(class="table table-borderless")
                thead 
                    tr
                        th(scope="col1") ROUGE-Type
                        th(scope="col1") Task Name
                        th System Name
                        th Avg_Recall
                        th Avg_Precision
                        th Avg_F-SCore
                        th Num References Summaries
                tbody
                    
                    -for (var i=0; i< medidas.medidas.length; i++)
                        tr(class="cell_")
                            td=medidas.medidas[i]['ROUGE-Type']                
                            td=medidas.medidas[i]['Task Name']
                            td=medidas.medidas[i]['System Name']
                            td=medidas.medidas[i].Avg_Recall
                            td=medidas.medidas[i].Avg_Precision 
                            td=medidas.medidas[i]['Avg_F-Score']
                            td(style="text-align:center")=medidas.medidas[i]['Num Reference Summaries']

                            
    script.
            

                    
            
            
           
           
